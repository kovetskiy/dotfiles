endsnippet

snippet vd "variable declaration" bw
${1:`!p snip.rv=px.php.last_last_var_for_snippet()`} = $2
endsnippet

snippet vdt "variable declaration" bw
${1:`!p snip.rv=px.php.last_last_var_for_snippet()`} = $this->$2
