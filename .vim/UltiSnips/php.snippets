endsnippet

snippet le "log exception" bw
$this->_di->getLogger()->exception(`!p snip.rv=px.php.last_last_var_for_snippet()`);
endsnippet

snippet i "if" bw
if ($1) {
	$2
}$3
endsnippet

snippet ei "elseif" iw
 elseif ($1) {
	$2
}
endsnippet

snippet e "else" iw
