#!/bin/bash

which zfs &>/dev/null
if [ $? -ne 0 ]; then
    exit 0
fi

set -euo pipefail

:log() {
    printf "$(highlight bold)Â» zfs: %s$(highlight reset)\n" "$*"
}

:get-pool() {
    sudo zfs list -pH -o name,mountpoint | awk '$2 == "/" { print $1 }'
}

:main() {
    local pool
    local snapshot

    pool=$(:get-pool)
    snapshot="$pool@backup_$(datename)"

    :log "creating snapshot $snapshot"
    sudo zfs snapshot $snapshot

    zfs-destroy-old-snapshots
}

:main "${@}"
