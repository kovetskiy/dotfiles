#!/bin/bash

filename="$HOME/screenshots/$(date +%F-%T | tr : T).png"

if [[ "${1:-}" == "-f" ]]; then
    import "$filename"
else
    maim -s -u > $filename
    if [[ ! -f "$filename" ]]; then
        exit 1
    fi
fi

ln -sf "$filename" "$HOME/screenshots/last.png"
ln -sf "$filename" "$HOME/s.png"

xclip -selection primary -t image/png < "$filename"
xclip -selection clipboard -t image/png < "$filename"
