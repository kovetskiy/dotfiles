#!/bin/bash

#[ -n "$_LOCK" ] || _LOCK=x exec flock -n $0 $0 "$@"

:main() {
    local action=$1

    local status="$(:change "$action")"

    :notify "$status"
    echo "$status"
}

:notify() {
    local value=$1
    if [[  $value -lt 1 ]]; then
        value=0
    fi
    local bar=$(sparklines $(seq 0 10 ${value}))
    notify-replace "volume" "" "<b>VOLUME</b> ${bar} ${value}%"
}

:change() {
    local action=$1
    local step=1

    case $action in
        up)
            volumectl -f '%.0f' up $step
            #amixer set Master '2+'
        ;;

        down)
            volumectl -f '%.0f' down $step
            #amixer set Master '2-'
        ;;
    esac
}


:main "${@}"
