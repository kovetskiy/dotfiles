#!/bin/bash

get-status() {
    status=$(baton status)
    artist=$(grep -P "^Artist:" <<< "$status" | cut -d: -f2-)
    track=$(grep -P "^Track" <<< "$status" | cut -d: -f2-)
    echo ğŸµ $artist â€” $track
}

icon=""
case "$1" in
    next)
        icon="â­ï¸"
        ;;

    prev)
        icon="â®ï¸"
        ;;

    pause)
        icon="â¯ï¸"
        ;;

    save)
        icon="â­"
        ;;

    *)
        icon="${1}"
        ;;
esac

if [[ "$1" == "status" ]]; then
    notify music "" "$(get-status)"
    exit
fi

notify-replace music "" "${icon}"
baton "${@}"
notify-replace music "" "$(get-status)"
