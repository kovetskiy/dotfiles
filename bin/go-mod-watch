#!/bin/bash

:blue() {
    echo -e '\e[48;5;18m:: \e[1m'"${@}"' \e[0m'
}

:red() {
    echo -e '\e[48;5;124;38;5;209m:: \e[1m'"${@}"' \e[0m'
}

:green() {
    echo -e '\e[48;5;28;38;5;83m:: \e[1m'"${@}"' \e[0m'
}

if [[ ! "$1" ]]; then
    exec watcher '\.go$' -- "$0" "%s"
fi

output=$(go build -v ./... 2>&1)
if grep -q "no required module provides package" <<< "$output"; then
    go get -v
    :blue "GO GET OK"
else
    if [[ "$output" ]]; then
        :red "BUILD FAIL"
        echo "$output"
    else
        :green "BUILD PASS"
    fi
fi

go mod tidy

sleep 1
