#!/bin/bash

[ -n "$_LOCK" ] || _LOCK=x exec flock -n $0 $0 "$@"

set -euo pipefail

:init() {
    if [ "$(cat ~/.config/profile)" == "laptop" ]; then
        _SYSDIR=/sys/class/backlight/intel_backlight
    else
        _SYSDIR=/sys/class/backlight/acpi_video0
    fi
}

:main() {
    :init

    value="$1"
    case "$1" in
        up)
            value=$(:up)
            ;;

        down)
            value=$(:down)
            ;;

        toggle)
            value=$(:toggle)
            ;;

        *)
            value=$(:from-percent "$1")
            ;;
    esac

    :set "$value"
    :notify "$value"
}

:up() {
    local now=$(:get)
    echo $(($now+$(:step $now)))
}

:down() {
    local now=$(:get)
    echo $(($now-$(:step $now)))
}

:toggle() {
    local cache_path=/tmp/.brightness.cache
    local cache_value=$(cat $cache_path)
    local value="$(:get)"
    if [[ ! "$cache_value" ]]; then
        if [[ "$value" == "0" ]]; then
            echo $(:get_max)
            return
        else
            echo "$value" | tee $cache_path >/dev/null
            echo 0
            return
        fi
    fi

    echo "$cache_value"
    rm $cache_path
}

:get() {
    cat $_SYSDIR/brightness
}

:notify() {
    local level=$1
    local max=$(:get_max)
    local percent=$(:percent $level $max)
    notify-send.sh -r 2000 "brightness" "<b>BRIGHTNESS</b>: $percent%"
}

:set() {
	echo "$*" | sudo tee $_SYSDIR/brightness
}

_max=
:get_max() {
    if [[ ! "$_max" ]]; then
        _max=$(cat $_SYSDIR/max_brightness)
    fi
    echo $_max
}

:from-percent() {
    local max=$(:get_max)

    bc <<< "($max/500)*$1"
}

:step() {
    local now=$1
    local max=$(:get_max)
    local percent="$((100*$now/$max))"
    echo "$percent" >&2
    if [[ "$percent" -gt 15 ]]; then
        echo $(($(:get_max)/100))
    else
        echo $(($(:get_max)/500))
    fi
}

:percent() {
    local actual=$1
    local max=$2
    printf '%.2f' "$(calc -p "100*$actual/$max")"
}

:main "${@}"
