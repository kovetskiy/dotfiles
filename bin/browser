#!/bin/bash

url=$(sed -r 's#^(git+ssh|ssh|git)://(\w+@)?##' <<< "$1")
params="${@:2}"

scheme=$(grep -Po '^\w+://' <<< "$url")
if [[ "$scheme" != "http://"
   && "$scheme" != "https://"
   && "$scheme" != "ftp://"
   && "$scheme" != "file://"
   && "$scheme" != "" ]]; then
    notify-send "URL" "$url"

    exit
fi

if [[ ! "${BROWSER_PROFILE:-}" ]]; then
    if [[ "$DISPLAY" != ":0" ]]; then
        BROWSER_PROFILE=mgx
    else
        BROWSER_PROFILE=default
    fi
fi

set -x
exec firefox-beta -P ${BROWSER_PROFILE:-default} "$url"
