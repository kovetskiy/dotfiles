#!/bin/bash

# if args passed, then just run i3-msg 'workspace $1; exec telegram-desktop "$@"'

set -x
xd_class="telegram-desktop"
ws=q

if [[ $# -gt 0 ]]; then
    /bin/telegram-desktop "${@}" &
    exit 0
fi

:current() {
    i3-msg -t get_workspaces \
      | jq '.[] | select(.focused==true).name' \
      | cut -d"\"" -f2
}

current=$(:current)

cache=/var/run/user/$UID/alttab.tg

if ! pidof telegram-desktop; then
    if [[ "$current" != "$ws" ]]; then
        i3-msg "workspace $ws"
        echo -n "$current" > $cache
    fi

    export QT_STYLE_OVERRIDE=""
    export QT_QPA_PLATFORMTHEME=gtk3
    export DESKTOP_APP_I_KNOW_ABOUT_GTK_INCOMPATIBILITY=1
    export DESKTOP_APP_DISABLE_GTK_INTEGRATION=1
    export DESKTOPINTEGRATION=1
    /bin/telegram-desktop &
    exit 0
fi


if [[ "$current" == "$ws" ]]; then
    if [[ -f $cache ]]; then
        prev=$(cat $cache)
        i3-msg "workspace $prev"
    fi
else
    echo -n "$current" > $cache
    i3-msg "workspace $ws"
    xdotool search --onlyvisible --classname "$xd_class" windowfocus
fi
